---
import EntryCardHeaderLink from './EntryCardHeaderLink.astro';
import EntryCardImage from './EntryCardImage.astro';
import EntryCardTags from './EntryCardTags.astro';

const { post, lang } = Astro.props;
---

<div class="entry">
  <EntryCardImage image={post.data.image} />
  <EntryCardHeaderLink post={post} lang={lang} />
  <p>{post.data.description}</p>
  <EntryCardTags tags={post.data.tags} lang={lang} />
</div>
