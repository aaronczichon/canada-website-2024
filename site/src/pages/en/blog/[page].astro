---
import Layout from "../../../layouts/Layout.astro";
import { Image } from "astro:assets";
import rssIcon from "../../../resources/rss.svg";
import { generateStaticPaths } from "../../../functions/paths.func";
import EntryCardImage from "../../../components/entry-card/EntryCardImage.astro";
import EntryCardHeaderLink from "../../../components/entry-card/EntryCardHeaderLink.astro";

export async function getStaticPaths({ paginate }: any) {
  return generateStaticPaths(paginate, "en");
}
// All paginated data is passed on the "page" prop
const { page } = Astro.props as any;
---

<Layout title="Canada - Blog">
  <main class="container">
    <h1>
      Blog {page.currentPage === 1 ? "" : `- Page ${page.currentPage}`}
      <a href="/en/rss.xml"
        ><Image
          style="width: 25px; height: 25px"
          src={rssIcon}
          alt="RSS Icon for subscribe to RSS feed."
          widths={[30]}
          sizes={`30px`}
        /></a
      >
    </h1>
    <p>
      Here you can find all blog entries so far. <br />
    </p>
    <div class="entry-grid">
      {
        page.data.map((post: any) => (
          <div class="entry">
            <EntryCardImage image={post.data.image} />
            <EntryCardHeaderLink post={post} lang="en-CA" />
            <p>{post.data.description}</p>
            {post.data.tags.map((tag: string) => (
              <a
                class="entry-tag"
                href={"/en/blog/" + encodeURIComponent(tag) + "/1"}
              >
                #{tag}
              </a>
            ))}
          </div>
        ))
      }
    </div>
    <div class="paginator">
      {
        page.url.prev ? (
          <a class="left" href={page.url.prev}>
            &lt; Previous Page
          </a>
        ) : null
      }
      {
        page.url.next ? (
          <a class="right" href={page.url.next}>
            Next Page &gt;
          </a>
        ) : null
      }
    </div>
  </main>
</Layout>
